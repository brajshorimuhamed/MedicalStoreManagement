@model MedicalStoreManagement.Web.ViewModels.SalePivotViewModel

@{
    ViewData["Title"] = "AddSalePivot";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="color: darkred">Add SalePivot</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddSalePivot">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductID" class="control-label"></label>
                <select asp-for="ProductID" class="form-control">
                    <option value="#">Zgjedh produktin</option>

                    @foreach(var product in Model.Products)
                    {
                        <option value="@product.Id">@product.Product_Name</option>
                    }
                </select>
                <span asp-validation-for="ProductID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerPivotID" class="control-label"></label>
                <select asp-for="CustomerPivotID" class="form-control">
                    <option value="#">Zgjedh konsumatorin</option>

                    @foreach (var pivot in Model.CustomerPivots)
                    {
                        <option value="@pivot.Id">@pivot.Research</option>
                    }
                </select>
                <span asp-validation-for="CustomerPivotID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add SalePivot" class="btn btn-success" />
                <input type="reset" value="Clear" class="btn btn-danger"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

