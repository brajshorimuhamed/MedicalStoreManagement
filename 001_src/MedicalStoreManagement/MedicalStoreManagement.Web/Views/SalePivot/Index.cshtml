@model MedicalStoreManagement.Web.ViewModels.SalePivotViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a class="btn btn-primary" asp-action="AddSalePivot">Create New SalePivot</a>
    <a class="btn btn-default" asp-area="" asp-controller="CustomerPivot" asp-action="Index">Customer Without Recepts</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotaliSales)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerPivotID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.SalePivots) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Product_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            @{ var totliSales = item.Quantity * item.Price;}
            <td>@totliSales</td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerPivot.Research)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditSalePivot", new { salePivotId = item.Id }) |
                @Html.ActionLink("Details", "Details", new { salePivotId = item.Id }) |
                @Html.ActionLink("Delete", "DeleteSalePivot", new { salePivotId = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
