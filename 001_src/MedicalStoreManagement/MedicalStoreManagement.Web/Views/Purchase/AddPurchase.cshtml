@model MedicalStoreManagement.Web.ViewModels.PurchaseViewModel

@{
    ViewData["Title"] = "AddPurchase";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="color: darkred">Add Purchase</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddPurchase">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductID" class="control-label"></label>
                <select asp-for="ProductID" class="form-control">
                    <option value="#">Zgjedh produktin</option>

                    @foreach (var product in Model.Products)
                    {
                        <option value="@product.Id">@product.Product_Name</option>
                    }
                </select>
                <span asp-validation-for="ProductID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FurnitorID" class="control-label"></label>
                <select asp-for="FurnitorID" class="form-control">
                    <option value="#">Zgjedh furnitorin</option>

                    @foreach (var furnitor in Model.Furnitors)
                    {
                        <option value="@furnitor.Id">@furnitor.Furnitor_FirstName</option>
                    }
                </select>
                <span asp-validation-for="FurnitorID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Purchase" class="btn btn-success" />
                <input type="reset" value="Clear" class="btn btn-danger"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

