@model MedicalStoreManagement.Web.ViewModels.CustomerPivotViewModel

@{
    ViewData["Title"] = "AddCustomerPivot";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="color: darkred">AddCustomerPivot</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddCustomerPivot">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Research" class="control-label"></label>
                <input asp-for="Research" placeholder="Enter research" class="form-control" />
                <span asp-validation-for="Research" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductId" class="control-label"></label>
                <select asp-for="ProductId" class="form-control">
                    <option value="#">Zgjedh produktin</option>

                    @foreach (var product in Model.Products)
                    {
                        <option value="@product.Id">@product.Product_Name</option>
                    }
                </select>
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="ProductStatus" /> @Html.DisplayNameFor(model => model.ProductStatus)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Pivot" class="btn btn-success" />
                <input type="reset" value="Clear" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

