@model MedicalStoreManagement.Web.ViewModels.CategoryViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a class="btn btn-primary" asp-action="AddCategory">Create New Category</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category_Quantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Categories) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category_Quantity)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { categoryId = item.Id }, new { onclick = "return confirm('Are you sure want to detail this category?');" }) |
                @Html.ActionLink("Delete", "DeleteCategory", new { categoryId = item.Id }, new { onclick = "return confirm('Are you sure want to delete this category?');" })
            </td>
        </tr>
}
    </tbody>
</table>
