@model MedicalStoreManagement.Web.ViewModels.InventoryViewModel

@{
    ViewData["Title"] = "ListInventory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="color: darkred">List Inventory</h1>

<a class="btn btn-primary" asp-area="" asp-controller="Furnitor" asp-action="Index">Furnitor Management</a>

<a class="btn btn-primary" asp-area="" asp-controller="Product" asp-action="Index">Product Management</a>


<table class="table table-striped">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inventory_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Inventories)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Inventory_Name)
                </td>
                <td>
                    <img src="~/ImageAsset/@item.ImageName" width="40" height="40" asp-append-version="true" />
                </td>
                <td>
                    @Html.ActionLink("Delete", "DeleteInventory", new { inventoryId = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
